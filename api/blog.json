---
layout: null
---

[ 
    {% for post in site.posts %}
        {
            "title": "{{ post.title }}",
            "category": "{{ post.category }}",
            "date": "{{ post.date }}",
            "author": "{{ post.author }}",
            "source": "{{ post.source }}",
            "source_url": "{{ post.source_url }}",
            "url": "{{ post.url }}",{% assign p = post.book | slugify %}{% assign my_post = "" | split: "" %}{% for booktitle in site.books %}{% assign detitel = booktitle.title | slugify %}{% if p == detitel %}{% assign itemtitle = "" | split: "" %}{% assign itemtitle = itemtitle | push: booktitle %}{% assign my_post = my_post | push: itemtitle %} {% endif %}{% endfor %}
            "books"       : [ 
                {% for b in post.books %}"{{ b }}"{% unless forloop.last %},{% endunless %}{% endfor %}
            ],
            "posts"       : [ 
                {% for r in post.posts %}"{{ r }}"{% unless forloop.last %},{% endunless %}{% endfor %}
            ],
            "content"  : {{ post.content | jsonify }}

        }{% unless forloop.last %},{% endunless %}{% endfor %}

]