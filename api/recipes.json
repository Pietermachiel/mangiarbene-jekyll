---
layout: null
---

[ 
  {% assign recipes = site.recipes | sort: "index" %}
  {% for recipe in recipes %}
      {
          "index": "{{ recipe.index }}",
          "title": "{{ recipe.title }}",
          "id": "{{ recipe.slugify }}",
          "product": "{{ recipe.product }}",
          "dish": "{{ recipe.dish }}",
          "url": "{{ recipe.url }}",{% assign p = recipe.book | slugify %}{% assign my_recipe = "" | split: "" %}{% for booktitle in site.books %}{% assign detitel = booktitle.title | slugify %}{% if p == detitel %}{% assign itemtitle = "" | split: "" %}{% assign itemtitle = itemtitle | push: booktitle %}{% assign my_recipe = my_recipe | push: itemtitle %} {% endif %}{% endfor %}
          "bookId"  : "{{ recipe.book | slugify }}",
          "book"       : [ {% for therecipe in my_recipe %}  
              {
                  "index"    : "{{ therecipe[0].index }}",
                  "title"    : "{{ therecipe[0].title }}",
                  "author"   : "{{ therecipe[0].author }}",
                  "content"  : {{ therecipe[0].content | jsonify }}
              }{% unless forloop.last %},{% endunless %}{% endfor %}
          ],
          "page": "{{ recipe.page }}"
      }{% unless forloop.last %},{% endunless %}{% endfor %}
  
]